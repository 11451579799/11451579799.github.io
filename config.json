            <div class="max-w-6xl mx-auto grid md:grid-cols-5 gap-8">
                <!-- 留言表单 -->
                <div class="md:col-span-2 fade-in-section">
                    <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 border border-gray-100 pixel-border">
                        <h3 class="text-xl font-semibold mb-6 font-minecraft">写下你的留言</h3>
                        <form id="message-form" class="space-y-4">
                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">游戏ID</label>
                                <input type="text" id="name" name="name" required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                                    placeholder="你的Minecraft名字">
                            </div>
                            
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">邮箱 (选填)</label>
                                <input type="email" id="email" name="email"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                                    placeholder="方便回复的邮箱">
                            </div>
                            
                            <div>
                                <label for="content" class="block text-sm font-medium text-gray-700 mb-1">留言内容</label>
                                <textarea id="content" name="content" rows="4" required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors resize-none"
                                    placeholder="分享你的Minecraft经验或建议"></textarea>
                            </div>
                            
                            <button type="submit" class="w-full bg-primary hover:bg-primary/90 text-white py-3 rounded-lg transition-colors font-medium pixel-btn font-minecraft">
                                发送留言
                            </button>
                        </form>
                    </div>
                </div>
                
                <!-- 留言列表 -->
                <div class="md:col-span-3 fade-in-section">
                    <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 border border-gray-100 h-full pixel-border">
                        <h3 class="text-xl font-semibold mb-6 flex items-center font-minecraft">
                            <i class="fa fa-comments text-primary mr-2" aria-hidden="true"></i>
                            玩家留言
                            <span id="message-count" class="ml-2 bg-primary/10 text-primary text-sm px-2 py-1 rounded-full">0</span>
                        </h3>
                        
                        <div id="messages-container" class="space-y-4 max-h-[500px] overflow-y-auto pr-2 gradient-mask-b">
                            <div class="text-center text-gray-500 py-10">
                                <i class="fa fa-comment-o text-4xl mb-3 opacity-30" aria-hidden="true"></i>
                                <p>还没有留言，快来分享你的Minecraft经验吧！</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 页脚 -->
    <footer class="bg-coal text-white py-12">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <a href="#" class="text-2xl font-bold flex items-center justify-center mb-4 font-minecraft" id="footer-title">
                    <i class="fa fa-cube mr-2" aria-hidden="true"></i>
                    <span>Blog Title</span>
                </a>
                <p class="text-gray-400 max-w-md mx-auto mb-6" id="footer-subtitle">
                    Blog description
                </p>
                <div class="flex justify-center space-x-4 mb-8">
                    <a href="#" class="text-gray-400 hover:text-white transition-colors minecraft-hover">
                        <i class="fa fa-github text-xl" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors minecraft-hover">
                        <i class="fa fa-bilibili text-xl" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors minecraft-hover">
                        <i class="fa fa-youtube-play text-xl" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="text-gray-500 text-sm">
                    <p>&copy; 2023 <span id="copyright-title">Blog Title</span> - 托管于 GitHub Pages</p>
                    <p class="mt-1">注意：适度游戏益脑，沉迷游戏伤身</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- 返回顶部按钮 -->
    <button id="back-to-top" class="fixed bottom-8 right-8 bg-primary text-white w-12 h-12 rounded-lg shadow-lg flex items-center justify-center opacity-0 invisible transition-all duration-300 hover:bg-primary/90 pixel-btn">
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
    </button>

    <!-- 图片查看器模态框 -->
    <div id="image-modal" class="fixed inset-0 bg-black/80 z-50 flex items-center justify-center opacity-0 invisible transition-all duration-300">
        <button id="close-modal" class="absolute top-4 right-4 text-white text-2xl hover:text-gray-300 minecraft-hover">
            <i class="fa fa-times" aria-hidden="true"></i>
        </button>
        <img id="modal-image" src="" alt="大图预览" class="max-w-[90%] max-h-[90vh] object-contain">
    </div>

    <!-- JavaScript -->
    <script>
        // 应用配置数据到页面
        document.addEventListener('DOMContentLoaded', function() {
            // 设置标题
            document.getElementById('blog-title').textContent = `${config.title} - 我的世界小站`;
            document.getElementById('nav-title').textContent = config.title;
            document.getElementById('hero-title').textContent = config.title;
            document.getElementById('hero-subtitle').textContent = config.subTitle;
            document.getElementById('footer-title').querySelector('span').textContent = config.title;
            document.getElementById('footer-subtitle').textContent = config.subTitle;
            document.getElementById('copyright-title').textContent = config.title;
            
            // 设置头像
            document.getElementById('avatar-image').src = config.avatarUrl;
            document.getElementById('avatar-image').alt = config.title;
            
            // 设置版本信息
            document.getElementById('version-info').textContent = `Version: ${config.GMEEK_VERSION}`;
            
            // 初始化其他功能
            initScrollAnimations();
            initMessageBoard();
            initImageViewer();
            initNavbarEffects();
        });
        
        // 滚动动画初始化
        function initScrollAnimations() {
            const fadeElements = document.querySelectorAll('.fade-in-section');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });
            
            fadeElements.forEach(element => {
                observer.observe(element);
            });
        }
        
        // 留言板功能
        function initMessageBoard() {
            const messageForm = document.getElementById('message-form');
            const messagesContainer = document.getElementById('messages-container');
            const messageCount = document.getElementById('message-count');
            
            // 初始化留言列表
            function renderMessages(messages) {
                if (messages.length === 0) {
                    messagesContainer.innerHTML = `
                        <div class="text-center text-gray-500 py-10">
                            <i class="fa fa-comment-o text-4xl mb-3 opacity-30" aria-hidden="true"></i>
                            <p>还没有留言，快来分享你的Minecraft经验吧！</p>
                        </div>
                    `;
                    messageCount.textContent = '0';
                    return;
                }
                
                messageCount.textContent = messages.length;
                messagesContainer.innerHTML = '';
                
                messages.reverse().forEach((message, index) => {
                    const messageEl = document.createElement('div');
                    messageEl.className = 'bg-gray-50 p-4 rounded-lg shadow-sm message-appear';
                    messageEl.style.animationDelay = `${index * 0.1}s`;
                    
                    messageEl.innerHTML = `
                        <div class="flex items-start">
                            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
                                <span class="text-primary font-medium">${message.name.charAt(0)}</span>
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between items-center mb-1">
                                    <h4 class="font-medium">${message.name}</h4>
                                    <span class="text-xs text-gray-500">${formatDate(message.date)}</span>
                                </div>
                                <p class="text-gray-600 text-sm">${message.content}</p>
                            </div>
                        </div>
                    `;
                    
                    messagesContainer.appendChild(messageEl);
                });
            }
            
            // 格式化日期
            function formatDate(dateString) {
                const date = new Date(dateString);
                return `${date.getFullYear()}-${(date.getMonth() + 1).toString().padStart(2, '0')}-${date.getDate().toString().padStart(2, '0')} ${date.getHours().toString().padStart(2, '0')}:${date.getMinutes().toString().padStart(2, '0')}`;
            }
            
            // 加载现有留言
            const messages = JSON.parse(localStorage.getItem('minecraftMessages') || '[]');
            renderMessages(messages);
            
            // 提交留言
            messageForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const content = document.getElementById('content').value;
                
                const newMessage = {
                    name,
                    email,
                    content,
                    date: new Date().toISOString()
                };
                
                const messages = JSON.parse(localStorage.getItem('minecraftMessages') || '[]');
                messages.push(newMessage);
                localStorage.setItem('minecraftMessages', JSON.stringify(messages));
                
                renderMessages(messages);
                messageForm.reset();
                
                const submitBtn = messageForm.querySelector('button[type="submit"]');
                const originalText = submitBtn.textContent;
                submitBtn.disabled = true;
                submitBtn.textContent = '发送成功！';
                
                setTimeout(() => {
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalText;
                }, 2000);
            });
        }
        
        // 图片查看器功能
        function initImageViewer() {
            const imageModal = document.getElementById('image-modal');
            const modalImage = document.getElementById('modal-image');
            const closeModal = document.getElementById('close-modal');
            const screenshotItems = document.querySelectorAll('.screenshot-item img');
            const viewMoreBtn = document.getElementById('view-more-screenshots');
            
            screenshotItems.forEach(img => {
                img.addEventListener('click', function() {
                    modalImage.src = this.src;
                    modalImage.alt = this.alt;
                    imageModal.classList.remove('opacity-0', 'invisible');
                    imageModal.classList.add('opacity-100', 'visible');
                    document.body.style.overflow = 'hidden';
                });
            });
            
            function closeImageModal() {
                imageModal.classList.add('opacity-0', 'invisible');
                imageModal.classList.remove('opacity-100', 'visible');
                document.body.style.overflow = '';
            }
            
            closeModal.addEventListener('click', closeImageModal);
            imageModal.addEventListener('click', function(e) {
                if (e.target === imageModal) {
                    closeImageModal();
                }
            });
            
            viewMoreBtn.addEventListener('click', function() {
                alert('更多截图正在整理中，敬请期待！');
            });
        }
        
        // 导航栏效果
        function initNavbarEffects() {
            const navbar = document.getElementById('navbar');
            const backToTop = document.getElementById('back-to-top');
            const menuToggle = document.getElementById('menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');
            
            window.addEventListener('scroll', function() {
                if (window.scrollY > 100) {
                    navbar.classList.add('py-2', 'shadow-md');
                    navbar.classList.remove('py-4');
                    
                    backToTop.classList.remove('opacity-0', 'invisible');
                    backToTop.classList.add('opacity-100', 'visible');
                } else {
                    navbar.classList.add('py-4');
                    navbar.classList.remove('py-2', 'shadow-md');
                    
                    backToTop.classList.add('opacity-0', 'invisible');
                    backToTop.classList.remove('opacity-100', 'visible');
                }
            });
            
            menuToggle.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
            
            backToTop.addEventListener('click', function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        }
    </script>
</body>
</html>
